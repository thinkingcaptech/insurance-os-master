<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title }}</title>
  <link rel="stylesheet" href="/referancestyle/main.css">
  <link rel="stylesheet" href="/referancestyle/dashboard.css">
</head>
<body data-theme="light" class="citadel-body insurance-os">
  <div class="bubble-bg" aria-hidden="true"></div>
  <div class="citadel-app">
    <header class="citadel-header">
      <div class="citadel-header__title">
        <h1>{{ title }}</h1>
      </div>
    </header>

    <div class="citadel-layout">
      {% set navData = navigation or [] %}
      {% if navData.sections %}
        <aside class="citadel-sidebar">
          <nav class="citadel-nav">
            <ul>
              {% for section in navData.sections %}
                <li>
                  <a href="{{ section.path }}">{{ section.label }}</a>
                  {% if section.children %}
                    <ul>
                      {% for child in section.children %}
                        <li><a href="{{ child.path }}">{{ child.label }}</a></li>
                      {% endfor %}
                    </ul>
                  {% endif %}
                </li>
              {% endfor %}
            </ul>
          </nav>
        </aside>
      {% endif %}

      <main class="citadel-main">
        {{ content | safe }}
      </main>
    </div>
  </div>

  <script>
    (function () {
      // Force day mode for Insurance OS pages
      document.addEventListener("DOMContentLoaded", function () {
        document.body.dataset.theme = "light";
        try {
          localStorage.setItem("citadel-theme", "light");
        } catch (e) {}
        var toggle = document.querySelector(".hero-theme-toggle");
        if (toggle) toggle.style.display = "none";

        // Bubble background generation
        var container = document.querySelector(".bubble-bg");
        if (container) {
          var bubbleCount = 20;
          for (var i = 0; i < bubbleCount; i++) {
            var b = document.createElement("span");
            b.className = "bubble";
            var size = 40 + Math.random() * 120;
            var duration = 14 + Math.random() * 12;
            var drift = (Math.random() * 160 - 80) + "px";
            var scale = 0.6 + Math.random() * 0.8;
            b.style.width = size + "px";
            b.style.height = size + "px";
            b.style.left = Math.random() * 100 + "%";
            b.style.setProperty("--bubble-duration", duration + "s");
            b.style.setProperty("--bubble-drift", drift);
            b.style.setProperty("--bubble-scale", scale.toString());
            b.style.animationDelay = (Math.random() * -duration) + "s";
            container.appendChild(b);
          }
        }

        // Wrap content sections by h2 into io-section cards and add local bubbles
        var main = document.querySelector(".citadel-main");
        if (main) {
          var nodes = Array.from(main.childNodes);
          var currentSection = null;
          nodes.forEach(function (node) {
            if (node.nodeType === 1 && node.tagName === "H2") {
              // start new section
              currentSection = document.createElement("div");
              currentSection.className = "io-section";
              main.insertBefore(currentSection, node);
              main.removeChild(node);
              currentSection.appendChild(node);
            } else if (currentSection && node.nodeType === 1) {
              currentSection.appendChild(node);
            }
          });

          // Add localized bubbles to each section
          var sections = document.querySelectorAll(".io-section");
          sections.forEach(function (sec) {
            var count = 6;
            for (var j = 0; j < count; j++) {
              var sb = document.createElement("span");
              sb.className = "section-bubble";
              var size = 30 + Math.random() * 70;
              var duration = 12 + Math.random() * 10;
              var drift = (Math.random() * 120 - 60) + "px";
              var scale = 0.7 + Math.random() * 0.6;
              sb.style.width = size + "px";
              sb.style.height = size + "px";
              sb.style.left = Math.random() * 100 + "%";
              sb.style.bottom = "-40px";
              sb.style.setProperty("--sb-duration", duration + "s");
              sb.style.setProperty("--sb-drift", drift);
              sb.style.setProperty("--sb-scale", scale.toString());
              sb.style.animationDelay = (Math.random() * -duration) + "s";
              sec.appendChild(sb);
            }
          });
        }
      });
    })();
  </script>
</body>
</html>
